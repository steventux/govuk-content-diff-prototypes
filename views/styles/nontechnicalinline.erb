<style>
  <%= Diffy::CSS %>
</style>

<% diff.differences.each do |difference| %>
  <% if difference[0] == '+' %>
    <div class="alert alert-success" role="change">
      <strong><%= difference[1] %></strong>
      <br /><br />
      <div class="card">
        <div class="card-block">
          <%= difference[2] %>
        </div>
      </div>
    </div>
  <% elsif difference[0] == '-' %>
    <div class="alert alert-danger" role="change">
      <strong><%= difference[1] %></strong>
      <br /><br />
      <div class="card">
        <div class="card-block">
          <%= govspeak difference[2] %>
        </div>
      </div>
    </div>
  <% elsif difference[0] == '~' %>
    <div class="alert alert-warning" role="change">
      <strong><%= difference[1] %></strong>
      <br /><br />
      <%= difference[4] %>
    </div>
  <% end %>
<% end %>
