<style>
  ins {
    background: rgb(180, 255, 180);
    text-decoration: none;
  }

  del {
    background: rgb(255, 130, 130);
    color: rgb(100, 0, 0);
  }

  .left ins {
    display: none;
  }

  .right del {
    display: none;
  }
</style>

<% diff.differences.each_with_index do |difference, index| %>
  <div class="card mb-2">
    <div class="card-header">
      <%= difference[1] %>

      <button class="ml-3 btn btn-secondary btn-sm" data-toggle="collapse" data-target="#collapse_<%= index %>">Details</button>
    </div>

    <div class="card-block collapse" id="collapse_<%= index %>">
      <div class="row">
        <div class="col-6 left">
          <%= difference[0] == '~' ? difference[4] : difference[3] %>
        </div>

        <div class="col-6 right">
          <%= difference[0] == '~' ? difference[5] : difference[4] %>
        </div>
      </div>
    </div>
  </div>
<% end %>
