<style>
  <%= Diffy::CSS %>
</style>

<% diff.differences.each do |difference| %>
  <% if difference[0] == '+' %>
    <div class="alert alert-success" role="change">
      <h6><%= difference[1] %></h6>
      <%= difference[3] %>
    </div>
  <% elsif difference[0] == '-' %>
    <div class="alert alert-danger" role="change">
      <h6><%= difference[1] %></h6>
      <%= difference[3] %>
    </div>
  <% elsif difference[0] == '~' %>
    <div class="alert alert-warning" role="change">
      <h6><%= difference[1] %></h6>
      <%= difference[4] %>
    </div>
  <% end %>
<% end %>
